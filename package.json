{
  "name": "@boardgamelab/sandbox",
  "version": "0.0.1",
  "description": "SVG Implementation of Boardgame Lab components",
  "scripts": {
    "dev": "parcel test.html",
    "build": "rollup -c rollup.config.js",
    "build:parcel": "parcel build index.ts",
    "build:ts": "tsc --emitDeclarationOnly --declaration --declarationDir ./dist/types",
    "ts": "tsc --noEmit",
    "ts:watch": "tsc --noEmit --watch",
    "lint": "prettier --check **/*.js",
    "prettier": "prettier --write **/*.{js,svelte}",
    "prepack": "npm run build:parcel && npm run build:ts"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js.map",
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "author": "Nicolo Davis <nicolodavis@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@boardgamelab/components": "file:../components",
    "rollup": "^2.3.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rollup-plugin-typescript2": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@rollup/plugin-json": "^4.0.2",
    "babel-loader": "^8.1.0",
    "husky": ">=1",
    "lint-staged": ">=8",
    "lodash.throttle": "^4.1.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-svelte": "^4.0.6",
    "prettier": "1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup-plugin-svelte": "^5.2.1",
    "svelte": "^3.20.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  }
}
